doctype html
html(theme='dark')
  head
    base(href='/')
    meta(charset='utf-8')

    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    meta(name='HandheldFriendly' content='true')
    meta(name='viewport' content='width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no')

    title Welcome to Jamrock
    meta(name='release' content=GIT_REVISION)

    script(src='//grown.jamrock.dev/scripts.js')
    link(rel='stylesheet' href='//grown.jamrock.dev/styles.css')
    link(rel='stylesheet' href='//fonts.googleapis.com/css?family=Sorts+Mill+Goudy')

    style.
      html[theme=dark] body, body { background-image: none; }
      .body { max-width: 720px; }
      .welcome svg { max-width: 150px; fill: currentColor }
      .logotype svg { max-width: 420px; }
      .logotype a svg { vertical-align: middle; }
      .logotype { margin: 0; }
      .center { text-align: center }
      .hero { margin: 50px; }
      .legend { opacity: .33; }
      main { margin: 0 auto; }
      blockquote b {
        cursor: default;
        font-style: normal;
        margin-right: .2em;
        padding-right: .2em;
        display: inline-block;
        text-align: center;
        width: 1.5em;
      }

  body.reset
    if NODE_ENV === 'production'
      script.
        /* eslint-disable */
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', '#{UA_CODE}', 'auto');
        ga('send', 'pageview');
        /* eslint-enable */

    main.body.noscroll
      block body
