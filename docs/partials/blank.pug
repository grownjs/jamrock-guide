doctype html
html
  head
    base(href='/')
    meta(charset='utf-8')

    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    meta(name='HandheldFriendly' content='true')
    meta(name='viewport' content='width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no')

    title= title
    meta(name='release' content=GIT_REVISION)

    link(rel='stylesheet' href='//unpkg.com/highlight.js@10.7.3/styles/tomorrow.css' inline)
    link(rel='stylesheet' href='//fonts.googleapis.com/css?family=Montserrat')
    import(from='styles.css' inline)

  body.reset
    if NODE_ENV === 'production'
      script.
        /* eslint-disable */
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', '#{UA_CODE}', 'auto');
        ga('send', 'pageview');
        /* eslint-enable */

    main.body
      .center
        span.welcome {@import from="welcome.svg"}
        h1.meteorite.floating: a(href='/' data-version=pkg.version) {@import from="jamrock-meteorite.svg"}

      hr

      block body
        != yield
